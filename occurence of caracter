// // C PROGRAMM TO COUNT THE NUMBER OF OCCURENCE OF  CHARACTER IN STRING

#include <stdio.h>
#include <string.h>
 
int main()
{
  	char str[100], ch;
  	int i, Count;
  	Count = 0;
//   	int l=strlen(str);
  	
 
  	printf("\n Please Enter any String :  ");
  	gets(str);
  	
  	printf("\n Please Enter the Character that you want to Search for :  ");
  	scanf("%c", &ch);
  	
//   	for(i = 0; i < l; i++)
while(str[i]!='\0')
  	{
  		if(str[i] == ch)  
		{
  			Count++;
 		}
 		i++;
	}
	printf("\n The Total Number of times '%c' has Occured = %d ", ch, Count);
	
  	return 0;
}
