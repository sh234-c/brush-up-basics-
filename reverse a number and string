// HOW TO REVERSE A NUMBER
#include <stdio.h>

int reverse(int num){
    int rev=0,rem;
    while(num!=0){
        rem=num%10;//last digit of number
        rev=rev*10+rem;
        num=num/10;//45->4
        
    }
    return rev;
}
int main(){
    int num=234;
    int rev=reverse(num);
    printf("the reversed number is %d",rev);
    return 0;
}
