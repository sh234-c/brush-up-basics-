//SWAPPING TWO numbers WITHOUT USING THIRD VARIABLE

#include <stdio.h>

int main(){
    int a=10,b=20;
    printf("before swapping a is %d\nb is %d\n",a,b);
    a=a+b;
    b=a-b;
    a=a-b;
       printf("after swapping a is %d\nb is %d\n",a,b);
       return 0;
}
